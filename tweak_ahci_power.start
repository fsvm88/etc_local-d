#!/usr/bin/bash

WATCH_DIR='/sys/class/scsi_host/host*'

STOP_AT=$(date +'%s' -d '+10 seconds')
while [ "$(date +'%s')" -lt "$STOP_AT" ]; do
    [ ! -d "$WATCH_DIR" ] && sleep 1
    [ -d "$WATCH_DIR" ] && break
done
[ -d "$WATCH_DIR" ] || exit 0


find /sys/class/scsi_host/host*/link_power_management_policy -type f -exec sh -c 'echo "medium_power" > "$1"' \;
